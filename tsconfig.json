{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}